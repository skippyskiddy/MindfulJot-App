<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <!-- Search and settings -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leftPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Search Section -->
            <EditText
                android:id="@+id/cityInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/enter_city_name"
                android:inputType="text"
                android:padding="8dp"
                app:layout_constraintEnd_toStartOf="@+id/getWeatherButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/getWeatherButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_weather"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Settings -->
            <RadioGroup
                android:id="@+id/unitToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cityInput">

                <RadioButton
                    android:id="@+id/fahrenheitOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="°F" />

                <RadioButton
                    android:id="@+id/celsiusOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="°C" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/humidityCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Humidity"
                app:layout_constraintEnd_toStartOf="@id/windCheck"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unitToggle"
                app:layout_constraintHorizontal_chainStyle="spread" />

            <CheckBox
                android:id="@+id/windCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Wind"
                app:layout_constraintEnd_toStartOf="@id/pressureCheck"
                app:layout_constraintStart_toEndOf="@id/humidityCheck"
                app:layout_constraintTop_toBottomOf="@id/unitToggle" />

            <CheckBox
                android:id="@+id/pressureCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pressure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/windCheck"
                app:layout_constraintTop_toBottomOf="@id/unitToggle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Current Weather -->
    <androidx.cardview.widget.CardView
        android:id="@+id/currentWeatherCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftPanel"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="Weather Icon"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/weatherIcon"
                app:layout_constraintTop_toTopOf="@id/weatherIcon" />

            <TextView
                android:id="@+id/weatherDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/weatherIcon"
                app:layout_constraintTop_toBottomOf="@id/temperature" />

            <TextView
                android:id="@+id/humidityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Humidity:"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/weatherDescription"
                app:layout_constraintTop_toBottomOf="@id/weatherDescription" />

            <TextView
                android:id="@+id/humidityValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/humidityLabel"
                app:layout_constraintTop_toTopOf="@id/humidityLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/windLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Wind:"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/humidityLabel"
                app:layout_constraintTop_toBottomOf="@id/humidityLabel" />

            <TextView
                android:id="@+id/windValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/windLabel"
                app:layout_constraintTop_toTopOf="@id/windLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/pressureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pressure:"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/windLabel"
                app:layout_constraintTop_toBottomOf="@id/windLabel" />

            <TextView
                android:id="@+id/pressureValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/pressureLabel"
                app:layout_constraintTop_toTopOf="@id/pressureLabel"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Forecast RecyclerView below both panels -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forecastRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentWeatherCard" />

    <!-- Progress indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>